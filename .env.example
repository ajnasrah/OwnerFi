# ==========================================
# OWNERFI ENVIRONMENT VARIABLES
# ==========================================
# Copy this file to .env.local and fill in your actual values
# NEVER commit .env.local to version control!

# ==========================================
# REQUIRED API KEYS
# ==========================================

# HeyGen - Video Generation ($330/month for 660 credits)
HEYGEN_API_KEY=your_heygen_api_key_here

# Submagic - Caption Generation ($150/month for 600 credits)
SUBMAGIC_API_KEY=your_submagic_api_key_here

# Late - Social Media Posting ($50/month unlimited)
LATE_API_KEY=your_late_api_key_here

# OpenAI - Script Generation
OPENAI_API_KEY=your_openai_api_key_here

# ==========================================
# FIREBASE CONFIGURATION (Required)
# ==========================================

# Client-side Firebase (Public - safe to expose)
NEXT_PUBLIC_FIREBASE_API_KEY=your_firebase_api_key
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN=your-project.firebaseapp.com
NEXT_PUBLIC_FIREBASE_PROJECT_ID=your-project-id
NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET=your-project.appspot.com
NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=your_sender_id
NEXT_PUBLIC_FIREBASE_APP_ID=your_app_id

# Server-side Firebase Admin (Private - keep secret!)
FIREBASE_PROJECT_ID=your-project-id
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nYour private key here\n-----END PRIVATE KEY-----\n"
FIREBASE_CLIENT_EMAIL=firebase-adminsdk-xxxxx@your-project.iam.gserviceaccount.com
FIREBASE_DATABASE_URL=https://your-project.firebaseio.com

# OR use service account JSON (alternative to above)
FIREBASE_SERVICE_ACCOUNT_KEY='{"type":"service_account","project_id":"..."}'

# ==========================================
# CLOUDFLARE R2 STORAGE (Required)
# ==========================================

R2_ACCOUNT_ID=your_cloudflare_account_id
R2_ACCESS_KEY_ID=your_r2_access_key_id
R2_SECRET_ACCESS_KEY=your_r2_secret_access_key
R2_BUCKET_NAME=your_bucket_name
R2_PUBLIC_URL=https://your-bucket.r2.dev

# Alternative names (legacy support)
# CLOUDFLARE_ACCOUNT_ID=your_cloudflare_account_id
# CLOUDFLARE_R2_ACCESS_KEY_ID=your_r2_access_key_id
# CLOUDFLARE_R2_SECRET_ACCESS_KEY=your_r2_secret_access_key
# CLOUDFLARE_R2_BUCKET_NAME=your_bucket_name
# CLOUDFLARE_R2_PUBLIC_URL=https://your-bucket.r2.dev

# ==========================================
# AUTHENTICATION & SECURITY (Required)
# ==========================================

# Cron job authentication
CRON_SECRET=your_random_secret_for_cron_jobs

# Webhook verification (ENABLED BY DEFAULT - RECOMMENDED)
# Set to false ONLY in development if needed
# ENFORCE_WEBHOOK_VERIFICATION=true

# Session secrets
NEXTAUTH_SECRET=your_nextauth_secret_here
NEXTAUTH_URL=https://yourdomain.com
JWT_SECRET=your_jwt_secret_here

# ==========================================
# OPTIONAL API KEYS
# ==========================================

# ElevenLabs - Voice Synthesis (optional)
# ELEVENLABS_API_KEY=your_elevenlabs_api_key

# Google Maps - Location Services (optional)
# GOOGLE_MAPS_API_KEY=your_google_maps_api_key

# GoHighLevel - CRM Integration (optional)
# GOHIGHLEVEL_API_KEY=your_ghl_api_key
# GOHIGHLEVEL_LOCATION_ID=your_ghl_location_id
# GHL_WEBHOOK_SECRET=your_ghl_webhook_secret

# ==========================================
# LATE API PROFILE IDS (One per brand)
# ==========================================

# LATE_CARZ_PROFILE_ID=your_carz_profile_id
# LATE_OWNERFI_PROFILE_ID=your_ownerfi_profile_id
# LATE_PODCAST_PROFILE_ID=your_podcast_profile_id
# LATE_VASSDISTRO_PROFILE_ID=your_vassdistro_profile_id
# LATE_ABDULLAH_PROFILE_ID=your_abdullah_profile_id

# ==========================================
# STRIPE PAYMENT PROCESSING (Optional)
# ==========================================

# STRIPE_SECRET_KEY=sk_test_xxxxx
# STRIPE_PUBLISHABLE_KEY=pk_test_xxxxx
# STRIPE_WEBHOOK_SECRET=whsec_xxxxx

# ==========================================
# WEBHOOK SECRETS (Optional but recommended)
# ==========================================

# HEYGEN_WEBHOOK_SECRET=your_heygen_webhook_secret
# SUBMAGIC_WEBHOOK_SECRET=your_submagic_webhook_secret

# ==========================================
# VERCEL SERVICES (Optional)
# ==========================================

# Vercel KV (Redis) - Distributed rate limiting
# Create at: https://vercel.com/dashboard/stores
# KV_REST_API_URL=https://xxxxx.kv.vercel-storage.com
# KV_REST_API_TOKEN=your_kv_token_here

# ==========================================
# MONITORING & ALERTS (Optional)
# ==========================================

# Sentry error tracking
# SENTRY_DSN=https://xxxxx@sentry.io/xxxxx

# Slack alerts
# SLACK_WEBHOOK_URL=https://hooks.slack.com/services/xxxxx

# Email alerts
# ALERT_EMAIL=alerts@yourdomain.com

# ==========================================
# BUDGET LIMITS (Optional - defaults provided)
# ==========================================

# Monthly budgets (USD)
# MONTHLY_BUDGET_HEYGEN=330
# MONTHLY_BUDGET_SUBMAGIC=150
# MONTHLY_BUDGET_LATE=50
# MONTHLY_BUDGET_OPENAI=15000
# MONTHLY_BUDGET_TOTAL=15700

# Daily budgets (USD)
# DAILY_BUDGET_HEYGEN=50
# DAILY_BUDGET_SUBMAGIC=50
# DAILY_BUDGET_OPENAI=15000

# ==========================================
# APPLICATION CONFIGURATION
# ==========================================

# Base URL for webhooks and callbacks
# NEXT_PUBLIC_BASE_URL=https://yourdomain.com

# Environment
# NODE_ENV=production

# ==========================================
# DEVELOPMENT ONLY
# ==========================================

# Skip signature verification (DEVELOPMENT ONLY - DO NOT USE IN PRODUCTION)
# SKIP_GHL_SIGNATURE=false
# GHL_BYPASS_SIGNATURE=false

# ==========================================
# NOTES
# ==========================================
#
# 1. Required variables will cause the app to fail in production if missing
# 2. Optional variables have sensible defaults or graceful degradation
# 3. Webhook verification is ENABLED BY DEFAULT for security
# 4. Keep all secrets secure - never commit .env.local!
# 5. Use different credentials for development and production
# 6. Rotate secrets regularly for security
